<h1>Apartments#show</h1>


<p>Find me in app/views/apartments/show.html.erb</p>

<%= image_tag @apartment.picture.url(:medium) %>

<h2>Apartment infos:</h2>
<ul>
  <li>Address: <%= @apartment.address %></li>
  <li>Description: <%= @apartment.description%></li>
  <li>Price per night: <%= @apartment.price%></li>
</ul>

<h2>Apartment bookings:</h2>
<ul>
<% @apartment.bookings[0...-1].each do |b|%>
  <li>
    <%= "Start: #{b.start_date} - End: #{b.end_date}" %>
  </li>
<% end %>
</ul>

<h2>Booking form</h2>
<%= form_for(@booking, url: apartment_bookings_path(@apartment)) do |f| %>
  <p>
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </p>
  <p>
    <%= f.label :start_date %>
    <%= f.date_field :end_date %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
