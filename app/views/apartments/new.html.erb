<div class="container content text-center">

  <h1>CREATE AN APPARTMENT</h1>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div id="newappart" class="text-center">

      <%= bootstrap_form_for(@apartment, html: { multipart: true}) do |f| %>
       <%= f.text_field :address, placeholder: 'Type your address' %>
       <%= f.text_area :description, placeholder: 'Describe your appartment' %>
       <%= f.number_field :price, placeholder: 'Type your price per night' %>

      <p>
        <%= f.file_field :picture %>
      </p>

      <p><%= f.submit %></p>

      <% end %>
      </div>
    </div>
  </div>
</div>

