<%= form_tag(apartments_path, method: 'get', class: 'form-inline' ) do %>
  <div class="form-group">
    <%= label_tag('search[address]', "") %>
    <%= text_field_tag 'search[address]', @address, placeholder: 'Where to ?', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag( 'search[start_date]', "Arrival") %>
    <%= date_field_tag('search[start_date]', @start_date, class: 'form-control') %>
  </div>

  <div class="form-group">
    <%= label_tag('search[end_date]', "Departure") %>
    <%= date_field_tag('search[end_date]', @end_date, class: 'form-control') %>
  </div>

  <%= submit_tag("Search", class: "btn btn-warning") %>
<% end %>